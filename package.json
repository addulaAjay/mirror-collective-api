{
  "name": "mirror_collective_api",
  "version": "1.0.0",
  "description": "RESTful API for Mirror Collective platform",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "dev:serverless": "serverless offline",
    "deploy:staging": "npm run build && serverless deploy --stage staging",
    "deploy:production": "npm run build && serverless deploy --stage production",
    "deploy:local": "npm run build && serverless offline",
    "remove:staging": "serverless remove --stage staging",
    "remove:production": "serverless remove --stage production",
    "logs:staging": "serverless logs -f api --stage staging",
    "logs:production": "serverless logs -f api --stage production",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:integration": "echo \"Integration tests not implemented yet\"",
    "test:smoke": "echo \"Smoke tests not implemented yet\""
  },
  "keywords": [
    "api",
    "rest",
    "typescript",
    "express",
    "mirror-collective"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.846.0",
    "@aws-sdk/client-ses": "^3.846.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "googleapis": "^153.0.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest-when": "^3.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "msw": "^2.10.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "serverless": "^4.17.1",
    "serverless-http": "^3.2.0",
    "serverless-offline": "^14.4.0",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
